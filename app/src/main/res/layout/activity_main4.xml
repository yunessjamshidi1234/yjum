<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">
    <TextView
        android:text=" First quarter"
        android:textSize="20sp"
        android:textColor="@color/lightRed"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/lightRed"/>
    <TableRow>
        <Button
            android:layout_marginTop="8dp"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="jan"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:layout_marginBottom="10dp"
            android:background="@color/ligthBlue"/>
        <ImageButton
            android:layout_marginTop="8dp"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/winter"/>
    </TableRow>
    <TableRow android:layout_marginTop="-5dp">
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="feb"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:layout_marginBottom="9dp"
            android:background="@color/ligthBlue"/>
        <ImageButton
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:src="@drawable/spring"
            android:layout_marginBottom="4dp"/>
    </TableRow>
    <TableRow android:layout_marginTop="-5dp">
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="mar"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:background="@color/ligthBlue"/>
        <ImageButton
            android:layout_marginTop="1dp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:src="@drawable/spi"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Secound quarter"
        android:textSize="20sp"
        android:textColor="@color/lightRed"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="@color/lightRed"/>
    <TableRow>
        <Button
            android:layout_marginTop="8dp"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="apr"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:background="@color/ligthBlue"/>
        <ImageButton
            android:layout_marginTop="7dp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ring"/>
    </TableRow>
    <TableRow android:layout_marginTop="-5dp">
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="may"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:background="@color/ligthBlue"/>
        <ImageButton
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:src="@drawable/jungle"
            android:layout_marginBottom="10dp"/>
    </TableRow>
    <TableRow android:layout_marginTop="-5dp">
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="jun"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:background="@color/ligthBlue"/>
        <ImageButton
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:src="@drawable/summer"/>
    </TableRow>



</TableLayout>