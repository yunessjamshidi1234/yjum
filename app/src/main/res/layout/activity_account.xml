<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".AccountActivity">
    <LinearLayout
        android:id="@+id/linebac"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#B81F1F"
        android:orientation="horizontal" />
    <ImageButton
        android:id="@+id/profilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:layout_gravity="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#00FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        android:layout_marginStart="10dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="اطلاعات پروفایل"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="کار های روزمره"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/linebac"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="120dp"
        android:text="سرچ کن"
        android:background="#4CAF50"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="70dp"/>
    <Button
        android:id="@+id/btncall"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnSearch"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="120dp"
        android:text="تماس بگیر"
        android:background="#4334C8"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:drawableRight="@drawable/phone"
        android:layout_marginTop="70dp"/>
    <Button
        android:id="@+id/btnEmail"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/btncall"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="120dp"
        android:text="پیام بده"
        android:background="#CAB547"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:drawableRight="@drawable/email"
        android:layout_marginTop="70dp"/>
    <Button
        android:id="@+id/btncam"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnEmail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="120dp"
        android:text="عکس بگیر"
        android:background="#42B692"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:drawableRight="@drawable/came"
        android:layout_marginTop="70dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>