<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".AccountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="left"
            android:background="#A1CD4F">
            <ImageView
                android:id="@+id/btn_Drawer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/enter"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:background="#319776"/>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="#62767E"
        android:layout_gravity="right"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/kotlin"
            android:focusable="true"
            android:gravity="bottom|center"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:id="@+id/btn_Profile"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  پروفایل"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:drawableRight="@drawable/acction"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/btn_Phone"
            android:layout_marginRight="15dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   تماس"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:drawableRight="@drawable/phone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/btn_Sms"
            android:layout_marginRight="15dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  پیامک"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:drawableRight="@drawable/email"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/btn_Search"
            android:layout_marginRight="15dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  جستجو"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:drawableRight="@drawable/search"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/btn_camera"
            android:layout_marginRight="15dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  عکس"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:drawableRight="@drawable/came"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>