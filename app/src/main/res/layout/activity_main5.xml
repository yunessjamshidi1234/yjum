<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FF0000"
        android:layout_gravity="clip_horizontal"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-190dp" />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/dtName"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:textColor="@color/blueme"
        android:textSize="30dp"
        android:background="#D1EAE4"
        />
    <TextView
        android:layout_gravity="end"
        android:id="@+id/dtCode"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blueme"
        android:textSize="21sp"/>
    <TextView
        android:layout_gravity="end"
        android:id="@+id/dtAge"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blueme"
        android:textSize="21sp"/>
    <TextView
        android:layout_gravity="end"
        android:id="@+id/dtCountry"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blueme"
        android:textSize="21sp"/>
    <EditText
        android:id="@+id/edtsabt"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:hint="اطلاعات درست است؟"
        android:layout_marginStart="20dp"/>
    <Button
        android:id="@+id/btnSabt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ثبت شود"
        android:textColor="#ffffff"
        android:background="#1F871C"/>


</LinearLayout>